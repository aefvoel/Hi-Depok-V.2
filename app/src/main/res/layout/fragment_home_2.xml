<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:alpha="0.5"
        android:gravity="center"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="78dip"
            android:layout_height="78dip"
            android:visibility="invisible"
            app:indicator="BallPulse"
            app:indicator_color="@color/colorWhite" />

    </LinearLayout>

    <fr.arnaudguyon.smartfontslib.FontButton
        android:id="@+id/searchList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/rectangle_green_without_radius"
        android:text="@string/menu"
        android:drawableStart="@drawable/ic_list_white_36dp"
        android:drawablePadding="15dp"
        android:paddingEnd="20dp"
        android:paddingStart="10dp"
        android:visibility="gone"
        app:font="@string/fontReguler"/>

</RelativeLayout>
