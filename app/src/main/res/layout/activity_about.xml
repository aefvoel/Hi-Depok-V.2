<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/colorWhite"
    tools:context="tiregdev.hi_depok.activity.AboutActivity">


    <fr.arnaudguyon.smartfontslib.FontTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center|top"
        android:text="@string/app_name_bold"
        android:textColor="@color/primary"
        android:textSize="20sp"
        app:font="@string/fontBold" />

    <fr.arnaudguyon.smartfontslib.FontTextView
        android:id="@+id/textContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/about_desc"
        app:font="@string/fontReguler"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/gambar_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/ImgDesc"
            android:src="@drawable/logo_kota_depok" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/ImgDesc"
            android:src="@drawable/depokfriendly" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/ImgDesc"
            android:src="@drawable/logo_launcher" />
    </LinearLayout>

    <fr.arnaudguyon.smartfontslib.FontTextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Version 2.0"
        android:textSize="12sp"
        app:font="@string/fontReguler" />

    <fr.arnaudguyon.smartfontslib.FontTextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="www.hi.depok.go.id"
        android:textColor="@color/primary"
        android:textSize="12sp"
        app:font="@string/fontReguler" />

    <fr.arnaudguyon.smartfontslib.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="@string/copyright"
        android:textSize="12sp"
        app:font="@string/fontBold" />

</LinearLayout>
