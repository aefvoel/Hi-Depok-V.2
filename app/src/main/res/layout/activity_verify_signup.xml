<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tiregdev.hi_depok.verify_signup"
    android:background="@drawable/screen_bg">

    <fr.arnaudguyon.smartfontslib.FontTextView
        android:id="@+id/txtVerif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        app:font="@string/fontReguler"
        android:textSize="16sp"
        android:text="@string/verify"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_below="@id/txtVerif"
        android:background="@drawable/rectangle_white_login"
        android:hint="@string/verifyNum"/>

    <fr.arnaudguyon.smartfontslib.FontButton
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/code"
        android:background="@drawable/rectangle_green"
        android:textColor="@color/colorWhite"
        android:text="@string/verifyBtn"
        app:font="@string/fontBold"/>

</RelativeLayout>
