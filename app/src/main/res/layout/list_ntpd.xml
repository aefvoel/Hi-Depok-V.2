<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGrayOld"
        android:textSize="16sp"
        android:text="Kecamatan Limo"/>

    <TextView
        android:id="@+id/nmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:text="02177880516"/>

    <ImageView
        android:id="@+id/call"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_call_black_36dp"
        android:contentDescription="@string/ImgDesc"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/copy"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:alpha="0.5"
        android:src="@drawable/ic_content_copy_grey_800_36dp"
        android:layout_toStartOf="@id/call"
        android:contentDescription="@string/ImgDesc"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>