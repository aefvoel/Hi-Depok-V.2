<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tiregdev.hi_depok.activity.EditProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/ImgDesc"
                    android:src="@drawable/char_icon" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/colorGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/username"
                    android:textColor="@color/colorRed" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nama"
                    android:textColor="@color/colorGray"
                    android:fontFamily="@string/fontReguler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/email"
                    android:textColor="@color/colorRed" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail2"
                    android:textColor="@color/colorGray"
                    android:fontFamily="@string/fontReguler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/almt"
                    android:textColor="@color/colorRed" />

                <EditText
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alamat"
                    android:textColor="@color/colorGray"
                    android:fontFamily="@string/fontReguler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/jk"
                    android:textColor="@color/colorRed" />

                <RadioGroup
                    android:id="@+id/jenisKel"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/alamat"
                    android:textColor="@color/colorBlack"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="@string/jk_l"
                        android:fontFamily="@string/fontReguler"/>

                    <RadioButton
                        android:id="@+id/radio_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="@string/jk_p"
                        android:fontFamily="@string/fontReguler"/>

                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/nmrTlp"
                    android:textColor="@color/colorRed" />

                <EditText
                    android:id="@+id/nmrTlp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tlp"
                    android:textColor="@color/colorGray"
                    android:fontFamily="@string/fontReguler" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/TglLahir"
                    android:textColor="@color/colorRed" />

                <Button
                    android:id="@+id/tglLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="5dp"
                    android:text="@string/jointgl"
                    android:textColor="@color/colorGray"
                    android:fontFamily="@string/fontReguler" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="-10dp"
                    android:background="@color/colorGray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/bio"
                    android:textColor="@color/colorRed" />

                <EditText
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_gray"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/isibio"
                    android:textColor="@color/colorGray"
                    android:fontFamily="@string/fontReguler" />

                <com.andexert.library.RippleView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    rv_centered="true"
                    app:rv_centered="true"
                    app:rv_color="@color/colorRipple"
                    app:rv_rippleDuration="150">

                    <Button
                        android:id="@+id/saveChanges"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rectangle_blue"
                        android:text="@string/save"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@string/fontBold" />

                </com.andexert.library.RippleView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
