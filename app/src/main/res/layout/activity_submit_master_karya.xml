<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tiregdev.hi_depok.activity.SubmitKaryaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/attachFile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/attach"
            android:contentDescription="@string/ImgDesc"
            android:alpha="0.7"/>

        <ImageView
            android:id="@+id/camera"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/camera_bluedark"
            android:layout_toEndOf="@id/attachFile"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/ImgDesc"
            android:alpha="0.7"/>

        <TextView
            android:id="@+id/posting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:alpha="0.5"
            android:text="@string/posting"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <EditText
            android:id="@+id/textPos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="@color/colorGray"
            android:inputType="textMultiLine"
            android:hint="@string/ApaKaryamu"
            android:fontFamily="@string/fontReguler"
            android:background="@color/transperent"/>

        <ImageView
            android:id="@+id/imgPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/ImgDesc"
            android:alpha="0.7"/>

    </LinearLayout>

</LinearLayout>
