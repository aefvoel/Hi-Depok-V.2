<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="tiregdev.hi_depok.activity.KritikSaranActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/fasilitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descKS"
                android:fontFamily="@string/fontReguler" />


            <EditText
                android:id="@+id/keperluan"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:inputType="textImeMultiLine"
                android:gravity="top"
                android:background="@drawable/rectangle_white_without_radius"
                android:hint="Kritik dan Saran"
                android:padding="10dp"
                android:textColor="@color/colorGray"
                android:textColorHint="@color/colorGray"
                android:fontFamily="@string/fontReguler" />

            <Button
                android:id="@+id/kirim"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_blue_primary_without_radius"
                android:text="@string/submit"
                android:textColor="@color/colorWhite"
                android:fontFamily="@string/fontBold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>