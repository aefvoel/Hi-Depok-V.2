<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp"
        android:id="@+id/cv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_kos"
                android:layout_width="match_parent"
                android:contentDescription="@string/ImgDesc"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/no_image"/>

            <TextView
                android:id="@+id/nama_kos"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/fontBold"
                android:text="Nama Kos"/>

            <TextView
                android:id="@+id/alamat_kos"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/fontReguler"
                android:text="Alamat Kos"/>

            <TextView
                android:id="@+id/harga_kos"
                android:textColor="@color/colorRed"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/fontBold"
                android:text="IDR 600.000 /Bulan"/>

            <Button
                android:id="@+id/lht_btn"
                android:layout_margin="15dp"
                android:background="@drawable/rectangle_green"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="Lihat Detail"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>