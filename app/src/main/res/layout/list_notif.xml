<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picNotif"
            android:contentDescription="@string/ImgDesc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/report_macet" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/picNotif"
            android:text="@string/nama"
            android:textStyle="bold"
            android:fontFamily="@string/fontBold" />

        <TextView
            android:id="@+id/notifTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/picNotif"
            android:layout_alignEnd="@id/time"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/user"
            android:text="@string/like"
            android:fontFamily="@string/fontReguler" />

        <ImageView
            android:id="@+id/dm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chat"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/ImgDesc"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dm"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:text="@string/time"
            android:textSize="9sp"
            android:fontFamily="@string/fontThin" />

    </RelativeLayout>

</RelativeLayout>