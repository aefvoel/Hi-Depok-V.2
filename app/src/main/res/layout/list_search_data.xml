<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/ImgDesc"
            android:scaleType="centerCrop"
            android:src="@drawable/massege_icon" />

        <TextView
            android:id="@+id/namaTempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon"
            android:text="@string/tempat1"
            android:textSize="16sp"
            android:fontFamily="@string/fontBold" />

        <TextView
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaTempat"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/alamat"
            android:fontFamily="@string/fontReguler" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/alamat"
            android:layout_marginTop="8dp"
            android:background="#b7b7b7" />

        <TextView
            android:id="@+id/jarak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="@string/jarak"
            android:textSize="11sp"
            android:fontFamily="@string/fontReguler" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jarak2"
            android:layout_marginTop="5dp"
            android:layout_below="@id/line"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"/>

    </RelativeLayout>
</LinearLayout>